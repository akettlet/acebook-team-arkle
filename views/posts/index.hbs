<div class="container">
<h1>Timeline</h1>
<ul class="posts">
  {{#each posts}}
  <p>
  <div>
  <!--author holds user object, author.name refers to name of the user-->
  {{ this.author.name }} says:<br>
  <li>{{this.message}}  - {{this.likes}} likes</li>
  </div>
  </p>
  {{/each}}
</ul>

<a class="new-post-link" href="/posts/new">New post</a>
</div>

