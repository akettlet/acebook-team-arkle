<script>

  window.post = function(data) {
    var temp = data.requestee
    return fetch(('/users/friend'), 
      {method: "POST", headers: {'Content-Type': 'application/json'},
      body: JSON.stringify(data)}).then(
      document.getElementById(temp).innerHTML="Request Sent!");
  }
</script>
<div class="container">
<h1>Users</h1>
<ul class="users">
  {{#each users}}
  <p>
  <div>
    <li> Name: {{ this.name }} </li> 
      {{#if this.requested }}
        <button id='{{this._id}}' onclick='post({requestee: "{{ this._id }}" })'>Request Sent!</button>
      {{else }}
        <button id='{{this._id}}' onclick='post({requestee: "{{ this._id }}" })'>Add Friend</button>
      {{/if}}
  </div>
  </p>
  {{/each}}
</ul>
</div>
